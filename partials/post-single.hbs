<article class="post-single {{post_class}}{{#if feature_image}} with-feature-image{{/if}}">
    <header class="post-header">
        {{> post/title}}

        {{> post/feature-image}}
        <div class="post-details">        
        {{> post/date}}
        {{> post/reading-time}}
        </div>
    </header>

    <section>
        {{#is "home"}}
            {{> post/excerpt}}
        {{else}}
            {{> post/content}}
        {{/is}}
    </section>

    <footer>
        {{> post/authors}}
        {{> post/tags-all}}
    </footer>
</article>